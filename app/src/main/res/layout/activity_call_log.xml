<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.ck_telecom.testassistant.activity.CallLogActivity">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_call_log_bg"
               android:alpha="0.2"
               android:background="@drawable/ic_calllog"/>
    <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_log_notices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加通话记录"
            android:textSize="30sp"/>
    <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_log_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前通话记录数:"
            app:layout_constraintTop_toBottomOf="@id/rd_log_type"
            android:textSize="20sp"/>
    <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_log_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            app:layout_constraintTop_toBottomOf="@id/rd_log_type"
            app:layout_constraintLeft_toRightOf="@id/tv_log_total"
            android:textSize="25sp"/>

    <EditText

            android:id="@+id/et_log_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电话号码"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tv_log_notices"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:id="@+id/et_log_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入次数"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/et_log_phone_num"
            android:layout_marginTop="10dp"
    />
    <RadioGroup android:id="@+id/rd_log_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_log_num">
        <RadioButton
                android:id="@+id/rd_log_miss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="未接"/>
        <RadioButton
                android:id="@+id/rd_log_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拨出"
        />
        <RadioButton
                android:id="@+id/rd_log_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已接"
        />
    </RadioGroup>
    <Button
            android:layout_marginTop="10dp"
            android:id="@+id/bt_log_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_constraintTop_toBottomOf="@+id/tv_log_total"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:layout_marginTop="10dp"
            android:id="@+id/bt_log_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_log_total"
            app:layout_constraintLeft_toRightOf="@id/bt_log_insert"
    />
    <ProgressBar
            android:id="@+id/pr_log_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bt_log_delete"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
    />


</android.support.constraint.ConstraintLayout>
