<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.ck_telecom.caller.activity.CallLogActivity">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_call_log_bg"
               android:alpha="0.2"
               android:background="@drawable/ic_calllog"/>
    <TextView
            android:id="@+id/tv_log_notices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加通话记录"
            android:textSize="30sp"/>
    <TextView
            android:id="@+id/tv_log_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前通话记录:--"
            app:layout_constraintTop_toBottomOf="@id/sp_log_type"
            android:textSize="20sp"/>

    <EditText
            android:id="@+id/et_log_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电话号码"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tv_log_notices"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:id="@+id/et_log_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入次数"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/et_log_phone_num"
            android:layout_marginTop="10dp"
    />
    <Spinner android:id="@+id/sp_log_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/et_log_num"></Spinner>
    <Button
            android:id="@+id/bt_log_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_constraintTop_toBottomOf="@+id/tv_log_total"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:id="@+id/bt_log_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_log_total"
           app:layout_constraintLeft_toRightOf="@id/bt_log_insert"
    />


</android.support.constraint.ConstraintLayout>
