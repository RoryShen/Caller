<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_answer_notes"
        android:textSize="25sp"

        />

    <EditText
        android:id="@+id/et_phone_ref_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/et_answer_phone_ref_num"
        android:inputType="phone"
        android:maxHeight="50dp"
        app:layout_constraintTop_toBottomOf="@id/Notes" />

    <EditText
        android:id="@+id/et_wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/et_answer_wait"
        android:inputType="number"
        android:maxHeight="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_phone_ref_num"

        />

    <CheckBox
        android:id="@+id/ck_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/ck_answer"
        app:layout_constraintTop_toBottomOf="@id/et_wait" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/tv_answer_status"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ck_answer"
        app:layout_constraintTop_toBottomOf="@id/et_wait" />

    <TextView
        android:id="@+id/tv_total_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="40dp"
        android:text="@string/tv_answer_total"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/bt_stop" />

    <TextView
        android:id="@+id/tv_total_num"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:maxHeight="40dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_total_tag"
        app:layout_constraintLeft_toRightOf="@id/tv_total_tag" />

    <TextView
        android:id="@+id/tv_pass_tag"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:maxHeight="40dp"
        android:text="@string/tv_answer_pass"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_total_num"
        app:layout_constraintLeft_toRightOf="@id/tv_total_num" />

    <TextView
        android:id="@+id/tv_pass_num"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:maxHeight="40dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_pass_tag"
        app:layout_constraintLeft_toRightOf="@id/tv_pass_tag" />

    <TextView
        android:id="@+id/tv_fail_tag"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:maxHeight="40dp"
        android:text="@string/tv_answer_fail"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_pass_num"
        app:layout_constraintLeft_toRightOf="@id/tv_pass_num" />

    <TextView
        android:id="@+id/tv_fail_num"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:maxHeight="40dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fail_tag"
        app:layout_constraintLeft_toRightOf="@id/tv_fail_tag" />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:onClick="Start"
        android:text="@string/bt_answer_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt_stop" />

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Stop"
        android:text="@string/bt_answer_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
